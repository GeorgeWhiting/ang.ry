<h1><%= pluralize(@ratings.count, "Review") %></h1>

<% @ratings.each do |rating| %>
  <div>
    <strong>Rating:</strong> <%= rating.stars %>
    <p> <strong>Review:</strong> <%= rating.review %></p>
    <p><%= link_to 'Destroy', restaurant_rating_path(id: rating.id),
            method: :delete,
            data:{ confirm: 'Are you sure?' } %>
    </p>
  </div>
<% end %>
