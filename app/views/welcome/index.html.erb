
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
    <h1> Restaurants </h1>
    <div class="row">

    <% if logged_in? %>
    
    <%= @current_user.username %>

      <li><%= link_to "Log out", logout_path, method: :delete %></li>

    <% else %>
      <li><%= link_to "Sign up", new_user_path %></li>
      <li><%= link_to "Log in", sessions_new_path %></li>
    <% end %>

    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-4">
        <p><%= restaurant.name %></p>
        <ul>
          <li><p><%= restaurant.location %></p></li>
          <li><p><%= restaurant.desc %></p></li>
          <li><p><%= (restaurant.ratings.inject(0){|sum, i| sum + i.stars} / (restaurant.ratings.count).to_f).round(1) %></p></li>
          <li><p><%= link_to 'Destroy', restaurant_path(restaurant),
                method: :delete,
                data:{ confirm: 'Are you sure?' } %>
        <p><%= link_to 'Edit', edit_restaurant_path(restaurant) %></p>

        </p></li>
        </ul>
      </div>
    <% end %>

</div>
<div class="col-sm-2">
</div>
</div>
</div>
