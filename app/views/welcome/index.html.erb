
<h1> Restaurants </h1>

<% @restaurants.each do |restaurant| %>
  <div>
    <p><%= restaurant.name %></p>
    <p><%= restaurant.location %></p>
    <p><%= restaurant.desc %></p>
    <p><%= link_to 'Destroy', restaurant_path(restaurant),
            method: :delete,
            data:{ confirm: 'Are you sure?' } %>
    </p>
  </div>
<% end %>
