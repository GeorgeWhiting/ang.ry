<!DOCTYPE html>
<html>
  <head>
    <title>Yelp</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="jumbotron mainbar">
      <div class="row">
        <div class="col-sm-2">
        </div>
          <div class="col-sm-8" align="center">
            <a href="/" class="main-link">
              <div><h2 class="title">Ange.ry</h2><%= image_tag("banner.png", :class => "banner-pic")%></div>
            </a>
          </div>
        <div class="col-sm-2">
        </div>
      </div>
    </div>
    <nav class="row userbar" data-spy="affix" data-offset-top="146">
      <div class="col-sm-2">
        <div class="container-flex left-blank">
        </div>
      </div>
      <div class="col-sm-8">
        <div class="container-flex user-box">
          <% if logged_in? %>
          <ul>
            <div class="user-title"><p><%= @current_user.username %></p></div>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
              <li><%= link_to "My Reviews", user_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_path %></li>
              <li><%= link_to "Log in", sessions_new_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="container-flex right-blank">
        </div>
      </div>
    </nav>
    <div id="errors">
      <% if flash[:errors] %>
        <%= flash[:errors] %>
      <% end %>
   </div>
    <%= yield %>

  </body>
</html>
