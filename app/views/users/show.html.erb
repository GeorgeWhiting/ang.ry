<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
      <h1> <%= @user.username %>'s reviews </h1>
      <div class="row">
        <% @user.ratings.each do |rating| %>
        <div class="col-sm-4">
          <p><%= Restaurant.find(rating.restaurant_id).name %></p>
          <ul>
            <li><p>Rating: <%= rating.stars %></p></li>
            <li><p>Review: <%= rating.review %></p></li>
            <%if @user.id == params[:id].to_i %>
            <li><p><%= link_to 'Destroy', user_rating_path(id: rating.id, user_id: rating.user_id, restaurant_id: rating.restaurant_id),
                  method: :delete,
                  data:{ confirm: 'Are you sure?' } %>
          <p><%= link_to 'Edit', edit_restaurant_rating_path(id: rating.id, user_id: rating.user_id, restaurant_id: rating.restaurant_id) %></p>

            </p></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-2">
    </div>
  </div>
</div>
